<%- include('partials/header')%>
  <%- include('partials/navbar')%>
    <title>Agenda</title>
    </head>
    <style>
      body {
        background-color: #7B88EE;
      }

      .btn {
        padding: 8px 16px;
        width: 128px;
        border-radius: 8px;
        font-weight: 700;
        margin-right: 30px;

      }

      .agendar {
        height: 46px;
        border-radius: 8px;
        background-color: #7B88EE;
        border-color: #6E6FE5;
        font-weight: 700;

      }

      .agendar:hover {
        background-color: #6E6FE5;
      }

      .body{
        background-color: #f1f1f1;
        font-size: 30px;
        width: 2100px;
        margin-left: 30px;
      }.Table{
        background-color: #f1f1f1;
        color:black;
        font-size: 30px;
      }.info{
        font-size: 50px;
        margin:0 auto;
      }.Btn{
        width: 250px;
        font-size: 20px;
        height: 100;
      }
    </style>

    
      <body><br><br>

        <div class="container">
            <div class="card bg-white text-black usuarius">
                <div class="card-header">
                    <div style="display: flex; justify-content: space-between;">
                        <h1 class="info">Minhas Consultas</h1>
                    </div>
                    
      <div class="card-body">
        <table class="table Table table-bordered text-black">
          <tr>
            <th>Medico/CRM</th>
            <th>Data</th>
            <th>Hora Inicial</th>
            <th>Hora Final</th>
            <th>Ação</th>
          </tr>
              <% consultas.forEach(consulta=>{ %>
                <tr>
                  <th>
                   <%= profissionais.nome+''+''+profissionais.crm%>
                  </th>
                  <th>
                    <%=consulta.datamarc%>
                  </th>
                  <TH>
                    <%=consulta.horaini%>
                  </TH>
                  <th>
                    <%=consulta.horafim%>
                  </th>
                  <th>
                    <form method="POST" action="/desmarcarconsulta" style="display: inline;">
                      <input type="hidden" id="idmedic" name="idmedic" value="<%=profissionais.id%>">
                      <input type="hidden" id="idpaciente" name="idpaciente" value="<%=id%>">
                      <input type="hidden" id="data" name="data" value="<%=consulta.datamarc%>">
                      <input type="hidden" id="idconsulta" name="idconsulta" value="<%=consulta.id%>">
                      <input type="hidden" id="hrini" name="hrini" value="<%=consulta.horaini%>">
                      <input type="hidden" id="hrfim" name="hrfim" value="<%=consulta.horafim%>">
                      <button type="submit" class="btn Btn btn-success agendar">Desmarcar Consulta</button>
                    </form>
                </tr>            
            <%})%>
        </table>
          
        
        <div class="row">
          <div class="col-md-8">
          </div>
          <div class="modal-footer">
            <a href="/marcarConsulta">
              <button type="button" class="btn btn-dark btn-modal neg"><b>VOLTAR</b></button></a>
          </div>
        </div>
      </div>
    </div>
    </body>


    </html>