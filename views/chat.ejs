<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mente Saudável</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</head>
<style>
    body {
        background-color: #7B88EE;
        padding: 10px 0;
    }

    H1 {
        color: rgb(102, 102, 102);
    }

    #chat {
        max-height: 250px;
        min-height: 250px;
        background-color: aliceblue;
        overflow-y: scroll;
    }

    footer {
        font-size: 13px;
        color: rgb(102, 102, 102);
        background-color: rgb(223, 223, 223);
        margin-top: 20px;
    }

    .div-back {
        background-color: #f1f1f1;
        border: 2px solid #6E6FE5;
    }

    .enviar {
        height: 46px;
        border-radius: 8px;
        background-color: #7B88EE;
        border-color: #5052ca;
        color: #fff;
        font-weight: 700;

    }

    .enviar:hover {
        background-color: #6e6fe5;
        color: #fff;
    }

    .sair {
        padding: 8px 16px;
        width: 128px;
        border-radius: 8px;
        margin-bottom: 10px;
        font-weight: 700;

    }
</style>

<body>
    <div class="container col-8 div-back">

        <div class="card-header">
            <h1 class="text-center">Live Chat</h1>
        </div>
        <br>

        <label for="chat">Conversa:</label>
        <div id="chat" class=" card card-body bg-white"></div>
        <hr>

        <label for="username">Usuário:</label>
        <input class="form-control" type="text" name="" id="username" placeholder="Seu nome de usuário"><br>

        <label for="msg">Campo de mensagem:</label>
        <textarea class="form-control" placeholder="Digite sua mensagem..." name="" id="msg" style="resize: none;"></textarea><br>
        <div class="d-grid mx-auto col-6">
            <button class="btn enviar" onclick="enviar()">Enviar</button>
        </div>
        <div style="margin-top: 5px;">
            <a href="/admin" class="btn btn-dark btn-sm sair">Sair</a>
        </div>
    </div>


    <hr>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.2.0/socket.io.js"></script>

<script>

    let socket = io("http://localhost:3000");

    socket.on("disconnect", () => {
        console.log('Desconectado');
    })

    socket.on("showmsg", data => {
        console.log(data);
        const chat = document.querySelector('#chat');
        const p = document.createElement("p")
        p.innerHTML = `<b> ${data.username}</b>: ${data.msg}`;
        chat.appendChild(p);
    })

    function enviar() {
        const msgInput = document.querySelector('#msg')
        const usernameInput = document.querySelector('#username')

        const msg = msgInput.value;
        const username = usernameInput.value;

        socket.emit("msg", { msg: msg, username: username });
        limpaCampo();
    }

    function limpaCampo() {
        const msgInput = document.querySelector('#msg')
        msgInput.value = '';
    }



</script>

</html>